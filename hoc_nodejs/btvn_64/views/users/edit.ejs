<h1>Sửa người dùng</h1>

<form action="" method="post" class="mb-3">
  <!-- name -->
  <div class="mb-3">
    <label for="fullname">Tên</label>
    <input
      type="text"
      name="fullname"
      class="form-control"
      placeholder="Nhập tên..."
      value="<%= user.fullname %>"
    />
  </div>

  <!-- email -->
  <div class="mb-3">
    <label for="email">Email</label>
    <input
      type="email"
      name="email"
      class="form-control"
      placeholder="Nhập email..."
      value="<%= user.email %>"
    />
  </div>

  <!-- mật khẩu -->
  <div class="mb-3">
    <label for="email">Mật khẩu</label>
    <input
      type="password"
      name="password"
      class="form-control"
      placeholder="Nhập mật khẩu..."
      value="<%= user.password %>"
    />
  </div>
  
  <!-- trạng thái -->
  <div class="mb-3">
    <label for="">Trạng thái</label>
    <select name="status" class="form-select">
        <option value="0" <%= !user.status ? 'selected': '' %>>Chưa kích hoạt</option>
      <option value="1" <%= user.status ? 'selected': '' %>>Kích hoạt</option>
    </select>
  </div>

  <!-- khóa học -->
  

  <button class="btn btn-primary">Lưu</button>
</form>
