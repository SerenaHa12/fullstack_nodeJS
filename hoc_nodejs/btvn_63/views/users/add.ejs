<form action="/users/add" method="post">
  <div class="mb-3">
    <label for="email">Email</label>
    <input
      type="email"
      name="email"
      placeholder="Email"
      class="form-control"
      value="<%= req.old?.email %>"
    />
    <%- req.errors?.email ? `<span class="text-danger"
      >${req.errors?.email}</span
    >`: '' %>
  </div>

  <div class="mb-3">
    <label for="title">Title</label>
    <input
      type="title"
      name="title"
      placeholder="Title"
      class="form-control"
      value="<%= req.old?.title %>"
    />
    <%- req.errors?.title ? `<span class="text-danger"
      >${req.errors?.title}</span
    >`: '' %>
  </div>

  <div class="mb-3">
    <label for="description">Description</label>
    <input
      type="text"
      name="description"
      placeholder="Description"
      class="form-control"
      value="<%= req.old?.description %>"
    />
    <%- req.errors?.description ? `<span class="text-danger"
      >${req.errors?.description}</span
    >`: '' %>
  </div>
  <button class="btn btn-primary" type="submit">Send</button>
</form>
